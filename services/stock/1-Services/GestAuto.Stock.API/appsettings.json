{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information"
    }
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.OpenTelemetry", "GestAuto.Stock.API"],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information",
        "OpenTelemetry": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      },
      {
        "Name": "OpenTelemetry",
        "Args": {
          "endpoint": "http://otel-collector:4317",
          "protocol": "grpc"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithSpan"]
  },
  "ConnectionStrings": {
    "StockDatabase": "Host=localhost;Port=5432;Database=gestauto_stock;Username=postgres;Password=postgres"
  },
  "Keycloak": {
    "Authority": "https://localhost:8443/realms/gestauto",
    "Audience": "gestauto"
  },
  "AllowedHosts": "*"
}
