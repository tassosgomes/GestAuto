{
  "ConnectionStrings": {
    "CommercialDatabase": "Host=localhost;Port=5432;Database=gestauto;Username=gestauto;Password=gestauto123;Include Error Detail=true"
  },
  "RabbitMQ": {
    "HostName": "localhost",
    "Port": 5672,
    "UserName": "gestauto",
    "Password": "gestauto123",
    "VirtualHost": "/"
  },
  "OutboxProcessor": {
    "BatchSize": 100,
    "PollingIntervalSeconds": 5,
    "MaxRetries": 3
  },
  "Keycloak": {
    "Authority": "https://keycloak.tasso.local/realms/gestauto",
    "Audience": "gestauto-commercial-api"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information"
    }
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.OpenTelemetry", "GestAuto.Commercial.API"],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information",
        "OpenTelemetry": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      },
      {
        "Name": "OpenTelemetry",
        "Args": {
          "endpoint": "http://otel-collector:4317",
          "protocol": "grpc"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithSpan"]
  },
  "AllowedHosts": "*"
}
